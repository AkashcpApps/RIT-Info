<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/sharecontent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/displaytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:text="Notification Title"
                android:textColor="@color/colorAccent"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/displaydescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/displaytitle"
                android:layout_margin="10dp"
                android:text="anand assistant android developer kjffgefwefiuyekheriuigegorefger8fgeufhfuierfgefreiuheriferfgefjegefgerferufergf8erg"
                android:textSize="15dp" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:layout_below="@+id/displaydescription"
                android:layout_height="wrap_content" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/displayimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/displaydescription"
                android:layout_margin="5dp" />


        </RelativeLayout>


    </ScrollView>
    <TextView
        android:id="@+id/liink"
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_above="@+id/sharecontent"/>
    <Button
        android:id="@+id/sharecontent"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="Share"
        android:textStyle="bold"
android:layout_margin="10dp"
        android:drawableTint="@color/white"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_menu_share"
        android:drawablePadding="-30dp"
        android:paddingLeft="30dp" android:layout_centerHorizontal="true"
        android:background="@drawable/button_back"
        android:backgroundTint="@color/colorAccent" />
</RelativeLayout>