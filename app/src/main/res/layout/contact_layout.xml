<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/personname"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:text="Adithya"
            android:drawableLeft="@drawable/icon_person"
            android:drawableTint="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/progress_horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/colorAccent"
            android:layout_below="@+id/personname" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/schooling"
            android:textAllCaps="true"
            android:layout_below="@+id/progress_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_school"
            android:drawableTint="@color/colorPrimary"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/mail"
            android:layout_below="@+id/schooling"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:drawablePadding="10dp"

            android:drawableLeft="@drawable/icon_mail"
            android:drawableTint="@color/colorPrimary"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/phonenumber"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/icon_call"
            android:drawableTint="#FFF"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"

            android:background="@color/colorPrimary"/>




 </RelativeLayout>

</android.support.v7.widget.CardView>