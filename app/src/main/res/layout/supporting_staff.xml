<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/supportname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="ADITHYA H Shetty"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:drawablePadding="10dp"

            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_below="@+id/supportname"
            android:layout_margin="5dp"
            android:src="@color/colorPrimary"
            android:layout_height="2dp" />
        <ProgressBar
            android:layout_below="@+id/image"
            android:layout_width="85dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:layout_height="85dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/supportimage"
            android:layout_marginTop="18dp"
            android:layout_width="85dp"
            android:layout_marginLeft="5dp"

            android:layout_height="85dp"
            android:layout_below="@+id/image"/>
        <TextView
            android:id="@+id/supportlab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.E , M.Tech"
            android:layout_toRightOf="@+id/supportimage"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/icon_school"
            android:layout_below="@+id/image"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/supportwork"
            android:text="Asst.Professor"
            android:layout_toRightOf="@+id/supportimage"

            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/icon_courses"
            android:layout_below="@+id/supportlab"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>