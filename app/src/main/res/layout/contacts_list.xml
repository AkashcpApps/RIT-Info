<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="10dp">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <TextView
         android:id="@+id/contactname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="ADITHYA H Shetty"
         android:textColor="@color/colorAccent"
         android:textStyle="bold"
         android:drawablePadding="10dp"

         android:textSize="18dp"
         />
     <ImageView
         android:id="@+id/image"
         android:layout_width="match_parent"
         android:layout_below="@+id/contactname"
         android:layout_margin="5dp"
         android:src="@color/colorAccent"
         android:layout_height="2dp" />
     <ProgressBar
         android:layout_below="@+id/image"
         android:layout_width="85dp"
         android:layout_marginLeft="5dp"
android:layout_marginTop="18dp"
         android:layout_height="85dp" />
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/contactimage"
         android:layout_marginTop="18dp"
         android:layout_width="85dp"
         android:layout_marginLeft="5dp"

         android:layout_height="85dp"
         android:layout_below="@+id/image"/>
     <TextView
         android:id="@+id/contactschooling"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="B.E , M.Tech"
         android:layout_toRightOf="@+id/contactimage"
         android:drawablePadding="10dp"
         android:drawableTint="@color/colorPrimary"
         android:drawableLeft="@drawable/icon_school"
         android:layout_below="@+id/image"
         android:textColor="@color/colorPrimary"
         android:layout_marginLeft="15dp"
         android:textSize="18dp"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/contactdesignation"
         android:text="Asst.Professor"
         android:layout_toRightOf="@+id/contactimage"

         android:drawablePadding="10dp"
         android:layout_marginTop="5dp"
         android:drawableTint="@color/colorPrimary"
         android:drawableLeft="@drawable/icon_courses"
         android:layout_below="@+id/contactschooling"
         android:layout_marginLeft="15dp"
         android:textColor="@color/colorPrimary"
         android:textSize="18dp"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/contactemail"
         android:layout_toRightOf="@+id/contactimage"

         android:text="adithyashetty24@gmail.com"
         android:drawablePadding="10dp"
         android:layout_marginTop="5dp"
         android:drawableTint="@color/colorPrimary"
         android:drawableLeft="@drawable/icon_mail"
         android:layout_below="@+id/contactdesignation"
         android:layout_marginLeft="15dp"
         android:textColor="@color/colorPrimary"
         android:textSize="18dp"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/contactcall"
         android:text="9590772559"
         android:drawablePadding="10dp"
         android:layout_marginTop="5dp"
         android:layout_toRightOf="@+id/contactimage"

         android:drawableTint="@color/colorPrimary"
         android:drawableLeft="@drawable/icon_call"
         android:layout_below="@+id/contactemail"
         android:layout_marginLeft="15dp"
         android:layout_marginBottom="10dp"
         android:textColor="@color/colorPrimary"
         android:textSize="18dp"/>
 </RelativeLayout>

</android.support.v7.widget.CardView>